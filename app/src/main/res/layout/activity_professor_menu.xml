<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_professor_menu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.kvm.automaticattendancemarker.ProfessorMenu">


    <LinearLayout

        android:id="@+id/professor_menu_page_layout_professor_details"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"

        android:visibility="visible">


        <android.support.v7.widget.CardView
            android:id="@+id/card_take_lecture"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/VieperLightestGreen"
            app:cardCornerRadius="24dp"
            app:contentPaddingLeft="22dp"
            app:contentPaddingRight="22dp"
            app:contentPadding="@dimen/activity_horizontal_margin">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TAKE A LECTURE NOW"
                android:textColor="@android:color/white"
                android:textSize="20sp"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:src="@drawable/ic_input_white_48px"/>
        </android.support.v7.widget.CardView>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/activity_vertical_margin">

            <!-- 1 -->
            <TextView
                android:id="@+id/professor_menu_page_lbl_professor_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_professor_details"
                android:textSize="24sp"
                android:textColor="@android:color/white"
                android:layout_marginTop="8dp"
                android:layout_marginStart="18dp"/>


            <ListView

                android:id="@+id/professor_menu_page_lv_account_details"

                android:layout_width="wrap_content"
                android:layout_height="180dp"

                android:background="@drawable/background_for_transparent_activity"
                android:backgroundTint="@color/VieperDeepLightGreen"

                android:scrollbars="none"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>
