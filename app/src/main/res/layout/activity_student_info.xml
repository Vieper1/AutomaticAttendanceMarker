<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_student_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.kvm.automaticattendancemarker.activities.result.StudentInfo"
    android:fillViewport="true"

    android:clipToPadding="false"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:cardBackgroundColor="@color/VieperLightestGreen">
            <TextView
                android:id="@+id/txt_student_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Davian One"
                android:gravity="center"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:layout_margin="8dp"
                android:elevation="2dp"
                android:layout_gravity="center_horizontal" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp"

            android:visibility="visible">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:padding="@dimen/activity_vertical_margin">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageview"
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:src="#c2cbe2"
                    android:padding="10dp"
                    app:civ_border_color="#c6cddc"
                    app:civ_border_width="2dp"/>

                <TextView
                    android:id="@+id/txt_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Student Email"
                    android:textSize="24sp"
                    android:textColor="@color/VieperLightestGreen"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/txt_student_class"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class"
                    android:textSize="18sp"
                    android:textColor="@color/VieperClosestToSteel"
                    android:layout_gravity="center_horizontal"/>

                <TextView
                    android:id="@+id/txt_rollno"
                    android:text="37"
                    android:layout_gravity="center"

                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@drawable/background_for_transparent_clickable_views"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:textColor="#212121" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Enrolled in"
                    android:textSize="24sp"
                    android:textColor="@color/VieperLightestGreen"
                    android:layout_gravity="center_horizontal"/>
                <TextView
                    android:id="@+id/txt_enrolled_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Subject1, Subject2"
                    android:layout_marginTop="8dp"
                    android:textSize="18sp"
                    android:textColor="@color/VieperClosestToSteel" />
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            app:cardBackgroundColor="@color/VieperLightestGreen">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Attendance"
                android:gravity="center"
                android:textColor="@color/cardview_light_background"
                android:textSize="18sp"
                android:layout_margin="8dp"
                android:elevation="2dp"
                android:layout_gravity="center_horizontal" />
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="12dp"
            android:layout_gravity="center"
            android:layout_marginTop="4dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_vertical_margin">
                <TextView
                    android:id="@+id/txt_current_subject"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Current Subject"
                    android:textSize="24sp"
                    android:textColor="@color/VieperLightestGreen"
                    android:layout_gravity="center_horizontal"
                    android:layout_weight="0.2"
                    android:layout_marginBottom="8dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Average"
                        android:textSize="18sp"
                        android:textColor="@color/VieperClosestToSteel"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/txt_current_subject_attendance"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textSize="18sp"
                        android:textColor="@color/VieperClosestToSteel"
                        android:layout_gravity="center_horizontal"
                        android:gravity="start"
                        android:layout_weight="0"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Attended"
                        android:textSize="18sp"
                        android:textColor="@color/VieperClosestToSteel"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/txt_current_subject_attended_number"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textColor="@color/VieperClosestToSteel"
                        android:layout_gravity="center_horizontal"
                        android:gravity="start"
                        android:layout_weight="0"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Total lectures"
                        android:textSize="18sp"
                        android:textColor="@color/VieperClosestToSteel"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"/>
                    <TextView
                        android:id="@+id/txt_current_subject_total_number"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textSize="18sp"
                        android:textColor="@color/VieperClosestToSteel"
                        android:layout_gravity="center_horizontal"
                        android:gravity="start"
                        android:layout_weight="0"/>
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>
</ScrollView>
